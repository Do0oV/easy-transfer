{% extends "base.html.twig" %} 

{% block content %}

    <div class="row">

        <div class="col-12 col-sm-12 col-md-2 col-lg-2"></div>

        <div class="col-12 col-sm-12 col-md-8 col-lg-8">
            <div class="bloc_central">
                <div class="cercle">
                    <div class="test">
                        <div class="losange"></div>

                        <div class="bloc_download">

                            <p><h2>{{ exp_email }}</h2></p><br>
                            <h2 class="h2_download">Vous invite à télécharger :</h2>
                            <p class="down"><span class="backgroundTextOpen">Fichier :</span><span class="backgroundTextEnd" data-toggle="tooltip" title="{{ file }}">{{ file }}</span></p>
                            <span class="backgroundTextOpen">Taille :</span><span class="backgroundTextEnd">{{ size }}</span><br><br>
                            <a href="{{ url('download/') ~ fake}}"><button class="btnDownload">Télécharger</button></a>

                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-2 col-lg-2"></div>

    </div>
    
{% endblock %}